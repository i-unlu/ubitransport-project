{
    "openapi": "3.0.0",
    "info": {
        "title": "Ubitransport school notation test",
        "version": "1.0.0"
    },
    "paths": {
        "/school-class/student/": {
            "post": {
                "tags": [
                    "Student"
                ],
                "summary": "Add a student",
                "description": "Add a student",
                "operationId": "addStudent",
                "responses": {
                    "201": {
                        "description": "Student added",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Student"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid student",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "Maintenance site"
                    },
                    "default": {
                        "description": "an \"unexpected\" error"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/school-class/student/{studentToEdit}": {
            "post": {
                "tags": [
                    "Student"
                ],
                "summary": "Edit a student",
                "description": "Edit a student",
                "operationId": "editStudent",
                "parameters": [
                    {
                        "name": "student",
                        "in": "query",
                        "description": "student to add",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/Student"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Student edited"
                    },
                    "422": {
                        "description": "Invalid student",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "Maintenance site"
                    },
                    "default": {
                        "description": "an \"unexpected\" error"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Student": {
                "description": "Student model",
                "required": [
                    "lastName",
                    "firstName"
                ],
                "properties": {
                    "id": {
                        "description": "Identifier.",
                        "type": "integer",
                        "example": "12"
                    },
                    "lastName": {
                        "description": "Last name.",
                        "type": "string",
                        "example": "UNLU"
                    },
                    "firstName": {
                        "description": "Last name.",
                        "type": "string",
                        "example": "izzetali"
                    }
                },
                "type": "object"
            },
            "ErrorModel": {
                "description": "Generic error model",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "description": "Error code",
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "description": "Error message",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}